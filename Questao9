using System;

class Program {
  public static void Main (string[] args) {
    
    int x;
    
    Console.WriteLine("Digite um número de 1 a 4:");
    x = int.Parse(Console.ReadLine());

    switch (x) {
      case 1:
        Console.WriteLine("Parabéns! Você ganhou um PS4!");
      break;
      case 2:
        Console.WriteLine("Parabéns! Você ganhou um Xbox!");
      break;
      case 3:
        Console.WriteLine("Parabéns! Você ganhou um Notebook!");
      break;
      case 4:
        Console.WriteLine("Parabéns! Você ganhou um Headset completo!");
      break;
    }
  }
}
