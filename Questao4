using System;

class Program {
  public static void Main (string[] args) {
    const double pi = 3.1415;
    double raio;

    Console.WriteLine("Digite o raio do círculo em questão:");
    raio = double.Parse(Console.ReadLine());

    double areaCirculo = (pi * Math.Pow(raio, 2));

    Console.Write("A área do círculo é de: ");
    Console.WriteLine(string.Format("{0:0.##}", areaCirculo));
  }
}
