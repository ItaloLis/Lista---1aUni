using System;

class Program {
  public static void Main (string[] args) {
    double alturaDegrau, alturaTotal;

    Console.WriteLine("Digite a altura dos degrais:");
    alturaDegrau = double.Parse(Console.ReadLine());

    Console.WriteLine("Digite a altura que você deseja subir:");
    alturaTotal = double.Parse(Console.ReadLine());

    double quantDegrais = alturaTotal / alturaDegrau;

    Console.WriteLine("Você deverá subir " + Math.Round(quantDegrais) + " degrais.");

  }
}
